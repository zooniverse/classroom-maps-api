apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: labs-api-production-tls-secret
spec:
  issuerRef:
    name: letsencrypt-prod
    kind: ClusterIssuer
  secretName: labs-api-production-tls-secret
  dnsNames:
    - labs-api.zooniverse.org
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: labs-api-production-ingress
  annotations:
    kubernetes.io/ingress.class: nginx
    certmanager.k8s.io/cluster-issuer: letsencrypt-prod
    nginx.ingress.kubernetes.io/proxy-buffer-size: "128k"
    nginx.ingress.kubernetes.io/set-real-ip-from: "10.0.0.0/8"
spec:
  tls:
  - hosts:
    - labs-api.zooniverse.org
    secretName: labs-api-production-tls-secret
  rules:
  - host: labs-api.zooniverse.org
    http:
      paths:
      - backend:
          serviceName: labs-api-production-app
          servicePort: 80
        path: /
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: labs-api-production-app
  labels:
    app: labs-api-production-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: labs-api-production-app
  template:
    metadata:
      labels:
        app: labs-api-production-app
    spec:
      containers:
        - name: labs-api-production-app
          image: zooniverse/labs-api:__IMAGE_TAG__
          resources:
             requests:
               memory: "150Mi"
               cpu: "10m"
             limits:
               memory: "150Mi"
               cpu: "1000m"
          ports:
            - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: labs-api-production-app
spec:
  selector:
    app: labs-api-production-app
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: NodePort