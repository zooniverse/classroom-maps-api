apiVersion: apps/v1
kind: Deployment
metadata:
  name: classroom-maps-api-production-app
  labels:
    app: classroom-maps-api-production-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: classroom-maps-api-production-app
  template:
    metadata:
      labels:
        app: classroom-maps-api-production-app
    spec:
      containers:
        - name: classroom-maps-api-production-app
          image: zooniverse/classroom-maps-api:__IMAGE_TAG__
          resources:
             requests:
               memory: "500Mi"
               cpu: "10m"
             limits:
               memory: "1000Mi"
               cpu: "1000m"
          ports:
            - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: classroom-maps-api-production-app
spec:
  selector:
    app: classroom-maps-api-production-app
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: NodePort
